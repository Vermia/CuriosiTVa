<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    tools:context="com.example.vermia.cosas.Idiomas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/idioma_aleman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="31dp"
        android:text="Alemán"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />

    <TextView
        android:id="@+id/idioma_espanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idioma_aleman"
        android:layout_alignStart="@+id/idioma_aleman"
        android:layout_below="@+id/idioma_aleman"
        android:text="Español"
        android:textSize="40dp"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:id="@+id/idioma_frances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idioma_espanol"
        android:layout_alignStart="@+id/idioma_espanol"
        android:layout_below="@+id/idioma_espanol"
        android:text="Francés"
        android:textSize="40dp"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:id="@+id/idioma_ingles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inglés"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/idioma_frances"
        android:layout_alignLeft="@+id/idioma_frances"
        android:layout_alignStart="@+id/idioma_frances"

        />

    <TextView
        android:id="@+id/idioma_italiano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idioma_ingles"
        android:layout_alignStart="@+id/idioma_ingles"
        android:layout_below="@+id/idioma_ingles"
        android:text="Italiano"
        android:textSize="40dp"
        android:layout_marginTop="40dp"

        />

    <RadioButton
        android:id="@+id/idioma_aleman_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idioma_aleman"
        android:layout_toEndOf="@+id/idioma_aleman"
        android:layout_toRightOf="@+id/idioma_aleman"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="10dp"
        android:onClick="pulsaAleman"
        />

    <RadioButton
        android:id="@+id/idioma_espanol_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/idioma_aleman_boton"
        android:layout_alignTop="@id/idioma_espanol"
        android:layout_below="@+id/idioma_aleman_boton"
        android:layout_marginTop="10dp"
        android:onClick="pulsaEspanol"
        />

    <RadioButton
        android:id="@+id/idioma_frances_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idioma_frances"
        android:layout_alignLeft="@+id/idioma_espanol_boton"
        android:layout_alignStart="@+id/idioma_espanol_boton"
        android:layout_marginTop="10dp"
        android:onClick="pulsaFrances"
        />

    <RadioButton
        android:id="@+id/idioma_ingles_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idioma_frances_boton"
        android:layout_alignStart="@+id/idioma_frances_boton"
        android:layout_alignTop="@+id/idioma_ingles"
        android:layout_marginTop="10dp"
        android:onClick="pulsaIngles"
        />

    <RadioButton
        android:id="@+id/idioma_italiano_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/idioma_ingles_boton"
        android:layout_alignStart="@+id/idioma_ingles_boton"
        android:layout_alignTop="@+id/idioma_italiano"
        android:layout_marginTop="10dp"
        android:onClick="pulsaItaliano"
        />


</RelativeLayout>
